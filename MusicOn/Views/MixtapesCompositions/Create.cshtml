@model MusicOn.Models.MixtapesCompositions

@{
    ViewData["Title"] = "Добавление трека";
}

<h1>Добавление трека</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MixTapeId" />
            <p>@Model.MixTape.Title</p>
            <div class="form-group">
                <label asp-for="CompositionId" class="control-label"></label>
                <select asp-for="CompositionId" class="form-control" asp-items="ViewBag.CompositionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="MixTapes" asp-action="Details" asp-route-id="@Model.MixTapeId">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
